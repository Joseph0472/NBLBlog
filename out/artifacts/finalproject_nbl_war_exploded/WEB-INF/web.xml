<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <servlet>
        <servlet-name>signUpServlet</servlet-name>
        <servlet-class>ictgradschool.web.deployments.controller.CreateUserServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>signUpServlet</servlet-name>
        <url-pattern>/signupServlet</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>AuthenticatorServlet</servlet-name>
        <servlet-class>ictgradschool.web.deployments.controller.AuthenticatorServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AuthenticatorServlet</servlet-name>
        <url-pattern>/login-result</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>CreateUserServlet</servlet-name>
        <!--<servlet-class>ictgradschool.web.deployments.controller.CreateUserServlet</servlet-class>-->
        <jsp-file>/WEB-INF/view/usersignup.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateUserServlet</servlet-name>
        <url-pattern>/usersignup</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>startup</servlet-name>
        <jsp-file>/WEB-INF/view/start-page.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>startup</servlet-name>
        <url-pattern></url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>startup</servlet-name>
        <url-pattern>/startpage</url-pattern>
    </servlet-mapping>




    <servlet>
        <servlet-name>login</servlet-name>
        <jsp-file>/WEB-INF/view/userlogin.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/userlogin</url-pattern>
    </servlet-mapping>
</web-app>
